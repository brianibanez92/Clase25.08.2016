<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".CategoriaActivity">

    <EditText
        android:maxLength="20"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/message_name"
        android:id="@+id/txtNombreCategoria"
        android:gravity="center"

        android:layout_gravity="center_horizontal" />

    <EditText
        android:maxLength="84"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/message_description"
        android:text=""
        android:id="@+id/txtDescripcionCategoria"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/btnFotoCategoria"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/ic_camera_add_plus"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/message_favourite"
            android:id="@+id/chkFavorito"
            android:layout_gravity="left" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_create_category"
            android:id="@+id/btnCrearCategoria"
            android:layout_gravity="right" />


    </LinearLayout>



</LinearLayout>